// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Event {
  id         Int      @id @default(autoincrement())
  sensorId   String
  value      Float
  type       String?
  createdAt  DateTime @default(now()) @map("created_at")

  alerts     Alert[]
  @@index([createdAt])
}

model Alert {
  id         Int      @id @default(autoincrement())
  eventId    Int
  score      Float
  reason     String?
  createdAt  DateTime @default(now()) @map("created_at")

  event      Event    @relation(fields: [eventId], references: [id])
  @@index([createdAt])
}

